# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
CLIENT_ID=your_client_id_here

# GUILD_ID is OPTIONAL - only use for testing in a single server
# For multi-server deployment, leave this commented out or remove it
# GUILD_ID=your_test_guild_id_here

# Database Configuration (MySQL)
# Bot will use ONE database for ALL servers
# Each server will have separate data (identified by guild_id)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=syntak_discord_bot

# Default Settings (can be customized per-server in database)
# These are fallback values, each server can have their own config

# Anti-Raid Settings
RAID_THRESHOLD=10
RAID_TIME_WINDOW=10000

# Auto-Mod Settings  
AUTO_MOD_ENABLED=true
MAX_MENTIONS=5
MAX_LINKS=3
